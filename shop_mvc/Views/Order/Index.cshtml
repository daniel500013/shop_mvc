<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Produkt</th>
      <th scope="col">Zdjęcie</th>
      <th scope="col">Cena</th>
      <th scope="col">Ilość</th>
      <th scope="col">Koszt</th>
      <th scope="col">Usuń</th>
    </tr>
  </thead>
  <tbody>
      @for (var i = 0; i < Model.Count; i++)
      {
        <tr>
          <th scope="row">@(i+1)</th>
          <td>@Model[i].Name</td>
          <td>@Model[i].Name</td>
          <td>@Model[i].Price</td>
          <td>@Model[i].Count</td>
          <td>@(Model[i].Price * @Model[i].Count)$</td>
          <td>
              <a asp-controller="Order" asp-action="Delete" asp-route-productID="@Model[i].Id" asp-route-userID="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="btn btn-danger">Usuń</a>
          </td>
        </tr>
      }
  </tbody>
</table>

<div>
    <a class="btn btn-success" asp-controller="Order" asp-action="Order" asp-route-userID="@User.FindFirst(ClaimTypes.NameIdentifier).Value">Kup</a>
</div>